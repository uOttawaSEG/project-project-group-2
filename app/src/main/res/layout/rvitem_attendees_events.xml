<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/white"
    android:orientation="horizontal"
    tools:context=".ui.activities.PendingAccountRequestsActivity"
    tools:ignore="ExtraText">

    <!--Request Box-->
    <ImageView
        android:id="@+id/eventbox_iv"
        android:layout_width="31dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true" />


    <!--Event Title-->
    <TextView
        android:id="@+id/event_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/eventbox_iv"
        android:textColor="@color/black"
        android:textSize="17dp"
        tools:text="Event Title" />


    <!--Start Time-->
    <TextView
        android:id="@+id/start_time_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_title_tv"
        android:layout_toEndOf="@+id/eventbox_iv"
        android:textColor="@color/black"
        android:textSize="15dp"
        tools:text="Starts at: " />


    <!--End Time-->
    <TextView
        android:id="@+id/end_time_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_time_tv"
        android:layout_toEndOf="@+id/eventbox_iv"
        android:textColor="@color/black"
        android:textSize="15dp"
        tools:text="Ends at:" />


    <!--Event location-->
    <TextView
        android:id="@+id/event_location_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/end_time_tv"
        android:layout_toEndOf="@+id/eventbox_iv"
        android:textColor="@color/black"
        android:textSize="15dp"
        tools:text="Location: 123 Cool Street, 2nd floor" />

    <!--Request Status-->
    <TextView
        android:id="@+id/request_status_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_location_tv"
        android:layout_toEndOf="@+id/eventbox_iv"
        android:textColor="@color/black"
        android:textSize="15dp"
        tools:text="Request Status: null" />

    <Button
        android:id="@+id/view_event_details_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="7dp"
        android:backgroundTint="@color/pastel_blue"
        android:text="View Event Details"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/request_to_join_btn"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:backgroundTint="@color/pastel_green"
        android:text="*insert desired text here*"
        android:textColor="@color/black" />

</RelativeLayout>